<h2> <%= @event.name %> Sign Up</h2>

<% flash.each do |type, msg| %>
    <div class="alert">
      Error: <%= msg %>
    </div>
    <br>
  <% end %>

<br>
<%= form_for [@event, @at_event] do |f| %>
    <%=f.label :expectation %>
    <%=f.text_field :expectation %>
    <%= f.collection_select :status_id, Status.all, :id, :name %>
    <br>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :event_id, :value => @event.id%>
    <%= f.submit 'Join Event'%>
<% end %>